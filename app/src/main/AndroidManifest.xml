<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Itubus"
        tools:targetApi="31">
        <activity
            android:name=".activity.activity.NotificacaoActivity"
            android:exported="false" />
        <activity
            android:name=".activity.activity.MostrarFotoActivity"
            android:exported="false" />
        <activity
            android:name=".activity.activity.PerfilActivity"
            android:exported="false" />
        <activity
            android:name=".activity.activity.ToolbarActivity"
            android:exported="false"
            android:label="@string/title_activity_toolbar"
            android:theme="@style/Theme.Itubus" />
        <activity
            android:name=".activity.activity.EditarPerfilActivity"
            android:exported="false"
            android:parentActivityName=".activity.activity.MainActivity" />
        <activity
            android:name=".activity.activity.CadastroActivity"
            android:exported="false"
            android:parentActivityName=".activity.activity.LoginActivity"
            android:theme="@style/AppThemeLogin" />
        <activity
            android:name=".activity.activity.MainActivity"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.Itubus" />
        <activity
            android:name=".activity.activity.LoginActivity"
            android:exported="true"
            android:theme="@style/AppThemeLogin">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>