<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/notification_layout.xml -->
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    tools:context=".activity.activity.NotificacaoActivity"
    android:padding="16dp">


    <ImageView
        android:id="@+id/notificacao"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_notification"
        android:contentDescription="Mensagem de notificação"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Novo Usuário"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/menssage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Olá! Bem Vindo(a)."
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>
