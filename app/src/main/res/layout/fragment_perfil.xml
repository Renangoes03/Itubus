<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.activity.MainActivity">

    <!-- AppBar -->

    <!-- Background Image -->

   <include layout="@layout/activity_toolbar"/>

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="343dp"
        android:layout_height="125dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBar" />

    <!-- Profile Picture -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagemEditarPerfil"
        android:layout_width="134dp"
        android:layout_height="128dp"
        android:layout_marginTop="-71dp"
        android:src="@drawable/profile_picture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/background_image" />

    <!-- Edit Icon -->

    <!-- Buttons Container -->

    <!-- Bottom Navigation Icons -->

    <Button
        android:id="@+id/buttonEditarPerfil"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignEnd="@id/imagemEditarPerfil"
        android:layout_alignBottom="@id/imagemEditarPerfil"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="@color/gray"
        android:drawableLeft="@drawable/ic_brush"
        android:elevation="4dp"
        android:padding="8dp"
        android:src="@drawable/background_botao_perfil"
        app:layout_constraintBottom_toBottomOf="@id/imagemEditarPerfil"
        app:layout_constraintEnd_toEndOf="@id/imagemEditarPerfil"
        app:layout_constraintHorizontal_bias="0.946"
        app:layout_constraintStart_toStartOf="@id/imagemEditarPerfil"
        app:layout_constraintTop_toTopOf="@id/imagemEditarPerfil"
        app:layout_constraintVertical_bias="0.806" />

    <LinearLayout
        android:id="@+id/buttons_container"
        android:layout_width="240dp"
        android:layout_height="411dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagemEditarPerfil"
        app:layout_constraintVertical_bias="0.326">

        <Button
            android:id="@+id/button_historico"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#2196F3"
            android:text="Histórico"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button_acessibilidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#2196F3"
            android:text="Acessibilidade"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button_notificacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#2196F3"
            android:text="Notificação"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button_favoritos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#2196F3"
            android:text="Favoritos"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button_parada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#2196F3"
            android:text="Parada"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button_recarga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#2196F3"
            android:text="Recarga"
            android:textColor="#FFFFFF" />

        <ProgressBar
            android:id="@+id/progressBarPerfil"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
